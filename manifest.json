{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/stokito/webdav-browser-extension",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "icons8-dav-50px.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons8-dav-50px.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "webdav-browser@stokito.com",
      "strict_min_version": "42.0"
    }
  },
  "default_locale": "en"
}
