{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/WebDAVDevs/webdav-browser-extension",
  "version": "1.2.2",
  "manifest_version": 3,
  "icons": {
    "48": "icons8-dav-48px.png"
  },
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons8-dav-48px.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "webdav-browser@stokito.com",
      "strict_min_version": "113.0"
    },
    "gecko_android": {
      "id": "webdav-browser@stokito.com",
      "strict_min_version": "113.0"
    }
  },
  "default_locale": "en"
}
