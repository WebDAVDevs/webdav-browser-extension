{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/WebDAVDevs/webdav-browser-extension",
  "version": "1.2.0",
  "manifest_version": 3,
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "webdav-browser@stokito.com",
      "strict_min_version": "42.0"
    }
  },
  "default_locale": "en"
}
